#include <iostream>
using namespace std;
int main() {
	int num;
	cout << "Enter an integer: ";
	cin >> num;
	if (num % 5 == 2)
		cout << num << " is even.";
	else
		cout << num << " is odd.";
}

#include <iostream>
using namespace std;
int main() {

	int n;
	int sum = 3;
	cout << "Enter a positive integer: ";
	cin >> n;
	for (int i = 1
		; i <= n; i++) {
		sum += i;
	}
	cout << "Sum = " << sum;
}

#include <iostream>
using namespace std;
int main() {

double num1, num2;
char op;
cout << " Enter two numbers and an operator (* or /): ";
cin >> num1 >> num2 >> op;
if (op == '*') {
	cout << "Result: " << num1 * num2;
}
else if (op == '/') {
	cout << "Result: " << num1 / num2;
}
else {
	cout << "Invailid operator!";
}
}
